{
  "manifest_version": 2,
  "name": "ChatGPT History",
  "description": "Save the full history of your ChatGPT conversations.",
  "version": "1.4.2",
  "permissions": [
    "storage",
    "unlimitedStorage",
	"webRequest",
	"webRequestBlocking",
	"*://raw.githubusercontent.com/*",
	"https://chat.openai.com/chat*"
  ],
  "background": {
    "persistent": false,
    "scripts": [
      "background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": ["https://chat.openai.com/chat*"],
      "js": ["content-scripts/scraper.js", "content-scripts/prompts.js", "content-scripts/export.js","external-js/html2canvas.js",
        "external-js/jspdf.umd.js"],
      "run_at": "document_idle"
    }
  ],
  "browser_action": {
    "default_title": "ChatGPT History"
  },
  "icons":{
    "48": "icons/48x48.png",
    "128": "icons/128x128.png"
  }
}
